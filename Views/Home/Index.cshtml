@using SQLMVC.Models;
@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Navigation"></partial>
@model List<User>

<div class="container">
    <div class="col-lg-12">
        <h1>
            Dashboard
        </h1>
        <a href="add" class="btn btn-primary">Add User</a>
        <table class="table table-striped table-bordered">
            <thead>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach (User Us in Model)
                {
                    <tr>
                    <td>@Us.FirstName</td>
                    <td>@Us.LastName</td>
                    <td>@Us.Email</td>
                    <td>
                        <a href="/Edit/@Us.UserId" class="btn btn-warning">Edit</a>
                        <a href="/Delete/@Us.UserId" class="btn btn-danger">Delete</a>
                        <a href="/Details/@Us.UserId" class="btn btn-info">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>